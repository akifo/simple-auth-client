{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "ENV": true,
        "SimpleAuthClient": true,
        "process": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": ["flowtype"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        // "indent": [
        //     "error",
        //     2
        // ],
        // "linebreak-style": [
        //     "error",
        //     "unix"
        // ],
        "no-console": 0,
        "flowtype/define-flow-type": 1,
        "flowtype/use-flow-type": 1,
        // "quotes": [
        //     "error",
        //     "single"
        // ],
        "semi": [
            "error",
            "always"
        ]
    }
}
